{
  "manifest_version": 3,
  "name": "Radio Stream Player",
  "version": "1.5",
  "description": "Plays and stops a radio stream",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}